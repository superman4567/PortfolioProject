    m_Metadata:
      m_Items: []
  - m_Id: 880098332672
    m_Localized: "Informa\xE7\xF5es do Projeto"
    m_Metadata:
      m_Items: []
  - m_Id: 966614241280
    m_Localized: Papel
    m_Metadata:
